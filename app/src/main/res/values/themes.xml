<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Isida.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/neutral085</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Isida.NoActionBar</item>
    </style>

    <style name="Theme.Isida" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@color/neutral085</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/neutral085</item>
        <item name="colorPrimaryDark">@color/neutral085</item>
        <item name="colorAccent">@color/neutral085</item>

        <item name="android:fitsSystemWindows">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>-->
    </style>

    <style name="Theme.Isida.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>