<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView android:id="@+id/tvCellMain"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="@string/CellNum"
              android:textSize="34sp"
              android:textStyle="bold" />

    <TableLayout android:id="@+id/tblMain"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="10dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/sensor0"
                      android:textColor="#E64A19"
                      android:textSize="28sp"
                      android:textStyle="bold" />

            <TextView android:id="@+id/tvTemp0"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="20dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/fraction"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />

            <TextView android:id="@+id/tvTempU0"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="5dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/fractionU"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">

            <TextView android:id="@+id/tvTempName1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="10dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/sensor2"
                      android:textColor="#0288D1"
                      android:textSize="28sp"
                      android:textStyle="bold" />

            <TextView android:id="@+id/tvTemp1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="20dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/fraction"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />

            <TextView android:id="@+id/tvTempU1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="5dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/fractionU"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="10dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/sensor1"
                      android:textColor="@color/dry1"
                      android:textSize="28sp"
                      android:textStyle="bold" />

            <TextView android:id="@+id/tvTemp2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="20dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/fraction"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />

        </TableRow>

        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="10dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/sensor3"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />

            <TextView android:id="@+id/tvTemp3"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="20dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/fraction"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="10dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/timer"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />

            <TextView android:id="@+id/tvTimer"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="20dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/integer"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />

            <TextView android:id="@+id/tvTimerU"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="5dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/integerU"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="10dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/counter"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />

            <TextView android:id="@+id/tvCount"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="20dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/integer"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="10dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/flap"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />

            <TextView android:id="@+id/tvFlap"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="20dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/percent"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />

            <TextView android:id="@+id/tvFlapU"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="5dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/percentU"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
                  android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="10dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/cotwo"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />

            <TextView android:id="@+id/tvCoTwo"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="20dp"
                      android:layout_marginTop="5dp"
                      android:text="@string/cotwoVal"
                      android:textColor="@color/black"
                      android:textSize="28sp"
                      android:textStyle="bold" />
        </TableRow>
    </TableLayout>
</LinearLayout>